<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="csc495.potato.walk.walkpotato.StepStatusFragment"
    android:id="@+id/step_status"
    android:background="#FFFFFF">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />

    <org.eazegraph.lib.charts.PieChart
        xmlns:eaze="http://schemas.android.com/apk/res-auto"
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="100dp"
        eaze:egLegendHeight="0dp"
        eaze:egInnerPadding="75"
        eaze:egInnerPaddingOutline="4.0"
        eaze:egInnerPaddingColor= "#FFFFFF"
        eaze:egHighlightStrength="2"/>

    <TextView
        android:id="@+id/steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:gravity="center"
        android:textSize="45sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/steps"
        android:layout_centerHorizontal="true"
        android:text="@string/steps"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

</RelativeLayout>
